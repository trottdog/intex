<!-- views/myJourney/events.ejs -->
<%

%>

<div class="page-header">
  <h1>My Events</h1>
  <p class="page-header-subtitle">View your registered events, check attendance, and find new experiences</p>
</div>

<!-- Tabs -->
<div class="tabs-container">
  <div class="tabs">
    <button class="tab <%= activeTab === 'upcoming' ? 'tab--active' : '' %>" data-tab="upcoming">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="16" y1="2" x2="16" y2="6"></line>
        <line x1="8" y1="2" x2="8" y2="6"></line>
        <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      Upcoming
      <% if (upcomingEvents.length > 0) { %>
        <span class="tab-badge"><%= upcomingEvents.length %></span>
      <% } %>
    </button>
    <button class="tab <%= activeTab === 'past' ? 'tab--active' : '' %>" data-tab="past">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 11 12 14 22 4"></polyline>
        <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
      </svg>
      Past Events
      <% if (pastEvents.length > 0) { %>
        <span class="tab-badge"><%= pastEvents.length %></span>
      <% } %>
    </button>
  </div>
  
  <a href="/events" class="btn btn-outline btn-sm">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
    Browse All Events
  </a>
</div>

<!-- Upcoming Events Tab -->
<div class="tab-content <%= activeTab === 'upcoming' ? 'tab-content--active' : '' %>" id="tab-upcoming">
  <% if (upcomingEvents.length > 0) { %>
    <div class="events-grid">
      <% upcomingEvents.forEach(event => { %>
        <article class="event-card">
          <div class="event-card-image">
            <% if (event.event_cover_photo) { %>
              <img src="<%= event.event_cover_photo %>" alt="<%= event.event_name %>" />
            <% } else { %>
              <div class="event-card-image-placeholder">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
              </div>
            <% } %>
            <span class="event-card-type"><%= event.event_type || 'Event' %></span>
          </div>
          
          <div class="event-card-body">
            <div class="event-card-date">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <%= event.event_date_start_formatted || 'Date TBD' %>
              <% if (event.event_time_start_formatted) { %>
                · <%= event.event_time_start_formatted %>
              <% } %>
            </div>
            
            <h3 class="event-card-title"><%= event.event_name %></h3>
            
            <div class="event-card-location">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <%= event.event_location || 'Location TBD' %>
            </div>
            
            <% if (event.event_description_short) { %>
              <p class="event-card-desc"><%= event.event_description_short %></p>
            <% } %>
            
            <div class="event-card-footer">
              <span class="badge <%= event.registration_status === 'Registered' ? 'badge--accent' : 'badge--primary' %>">
                <%= event.registration_status || 'Not Registered' %>
              </span>
              <a href="/my-journey/events/<%= event.registration_id || event.event_details_id %>" class="btn btn-ghost btn-sm">
                View Details →
              </a>
            </div>
          </div>
        </article>
      <% }) %>
    </div>
  <% } else { %>
    <div class="empty-state-large">
      <div class="empty-state-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
          <line x1="9" y1="14" x2="15" y2="14"></line>
        </svg>
      </div>
      <h3>No upcoming events</h3>
      <p>You haven't registered for any upcoming events yet. Browse our calendar to find workshops, summits, and programs!</p>
      <a href="/events" class="btn btn-primary">Browse Events</a>
    </div>
  <% } %>
</div>

<!-- Past Events Tab -->
<div class="tab-content <%= activeTab === 'past' ? 'tab-content--active' : '' %>" id="tab-past">
  <% if (pastEvents.length > 0) { %>
    <div class="events-list-view">
      <% pastEvents.forEach(event => { %>
        <article class="event-row">
          <div class="event-row-date">
            <span class="event-row-month"><%= event.event_month || 'TBD' %></span>
            <span class="event-row-day"><%= event.event_day || '--' %></span>
            <span class="event-row-year"><%= event.event_year || '' %></span>
          </div>
          
          <div class="event-row-content">
            <h4><%= event.event_name %></h4>
            <p class="text-muted">
              <%= event.event_type || 'Event' %> · <%= event.event_location || 'Location not specified' %>
            </p>
          </div>
          
          <div class="event-row-status">
            <% if (event.attendance_status === 'attended') { %>
              <span class="status-badge status-badge--success">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                Attended
              </span>
            <% } else if (event.attendance_status === 'no_show') { %>
              <span class="status-badge status-badge--warning">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="15" y1="9" x2="9" y2="15"></line>
                  <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
                No Show
              </span>
            <% } else { %>
              <span class="status-badge status-badge--neutral">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="12" y1="8" x2="12" y2="12"></line>
                  <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
                Unknown
              </span>
            <% } %>
          </div>
          
          <div class="event-row-survey">
            <% if (event.survey_status === 'completed') { %>
              <span class="survey-status survey-status--completed">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                Survey Completed
              </span>
            <% } else if (event.can_take_survey) { %>
              <a href="/my-journey/surveys/<%= event.registration_id %>" class="btn btn-primary btn-sm">
                Take Survey
              </a>
            <% } else { %>
              <span class="survey-status survey-status--closed">
                Survey Closed
              </span>
            <% } %>
          </div>
          
          <a href="/my-journey/events/<%= event.registration_id %>" class="event-row-action">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        </article>
      <% }) %>
    </div>
  <% } else { %>
    <div class="empty-state-large">
      <div class="empty-state-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M3 3v18h18"></path>
          <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"></path>
        </svg>
      </div>
      <h3>No past events yet</h3>
      <p>Once you attend events, they'll appear here along with your attendance history and survey status.</p>
      <a href="/events" class="btn btn-outline">Find Your First Event</a>
    </div>
  <% } %>
</div>

<style>
  /* Tabs */
  .tabs-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border-subtle);
  }
  
  .tabs {
    display: flex;
    gap: 0.5rem;
  }
  
  .tab {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .tab:hover {
    background: var(--color-primary-soft);
    color: var(--color-text);
  }
  
  .tab--active {
    background: var(--color-primary-soft);
    color: var(--color-primary-dark);
  }
  
  .tab-badge {
    background: var(--color-primary-dark);
    color: #fff;
    font-size: 0.65rem;
    padding: 0.15rem 0.45rem;
    border-radius: var(--radius-pill);
    font-weight: 600;
  }
  
  .tab--active .tab-badge {
    background: var(--color-primary-dark);
  }
  
  .tab-content {
    display: none;
  }
  
  .tab-content--active {
    display: block;
    animation: fadeIn 0.3s ease-out;
  }
  
  /* Events Grid for Upcoming */
  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }
  
  .event-card {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-soft);
    border: 1px solid var(--color-border-subtle);
    transition: all var(--transition-base);
  }
  
  .event-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-medium);
  }
  
  .event-card-image {
    position: relative;
    height: 160px;
    background: linear-gradient(135deg, var(--color-primary-soft) 0%, var(--color-dusty-blue) 100%);
    overflow: hidden;
  }
  
  .event-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .event-card-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary-dark);
    opacity: 0.5;
  }
  
  .event-card-image-placeholder svg {
    width: 48px;
    height: 48px;
  }
  
  .event-card-type {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    padding: 0.25rem 0.75rem;
    background: var(--color-surface);
    border-radius: var(--radius-pill);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-text);
    box-shadow: var(--shadow-soft);
  }
  
  .event-card-body {
    padding: 1.25rem;
  }
  
  .event-card-date {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: var(--text-xs);
    color: var(--color-primary-dark);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }
  
  .event-card-title {
    font-size: var(--text-lg);
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }
  
  .event-card-location {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }
  
  .event-card-desc {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0 0 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .event-card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border-subtle);
  }
  
  /* Events List View for Past */
  .events-list-view {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .event-row {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1rem 1.25rem;
    background: var(--color-surface);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-soft);
    border: 1px solid var(--color-border-subtle);
    transition: all var(--transition-fast);
  }
  
  .event-row:hover {
    border-color: var(--color-primary-soft);
  }
  
  .event-row-date {
    width: 60px;
    text-align: center;
    flex-shrink: 0;
  }
  
  .event-row-month {
    display: block;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    color: var(--color-primary-dark);
  }
  
  .event-row-day {
    display: block;
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    color: var(--color-text);
    line-height: 1;
  }
  
  .event-row-year {
    display: block;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }
  
  .event-row-content {
    flex: 1;
    min-width: 0;
  }
  
  .event-row-content h4 {
    font-size: var(--text-md);
    margin: 0 0 0.25rem;
  }
  
  .event-row-content p {
    font-size: var(--text-sm);
    margin: 0;
  }
  
  .event-row-status {
    flex-shrink: 0;
  }
  
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.75rem;
    border-radius: var(--radius-pill);
    font-size: var(--text-xs);
    font-weight: 500;
  }
  
  .status-badge--success {
    background: var(--color-success-soft);
    color: var(--color-accent-dark);
  }
  
  .status-badge--warning {
    background: rgba(244, 176, 146, 0.2);
    color: #c97a4a;
  }
  
  .status-badge--neutral {
    background: var(--color-bg);
    color: var(--color-text-muted);
  }
  
  .event-row-survey {
    flex-shrink: 0;
    min-width: 130px;
    text-align: right;
  }
  
  .survey-status {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: var(--text-xs);
    font-weight: 500;
  }
  
  .survey-status--completed {
    color: var(--color-accent-dark);
  }
  
  .survey-status--closed {
    color: var(--color-text-muted);
  }
  
  .event-row-action {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }
  
  .event-row-action:hover {
    background: var(--color-primary-soft);
    color: var(--color-primary-dark);
  }
  
  /* Empty State Large */
  .empty-state-large {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    border: 2px dashed var(--color-border-subtle);
  }
  
  .empty-state-large .empty-state-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    color: var(--color-text-light);
  }
  
  .empty-state-large .empty-state-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .empty-state-large h3 {
    font-size: var(--text-xl);
    margin: 0 0 0.75rem;
  }
  
  .empty-state-large p {
    color: var(--color-text-muted);
    max-width: 400px;
    margin: 0 auto 1.5rem;
  }
  
  /* Responsive */
  @media (max-width: 900px) {
    .tabs-container {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }
    
    .event-row {
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .event-row-content {
      flex: 1 1 100%;
      order: 1;
    }
    
    .event-row-date {
      order: 0;
    }
    
    .event-row-status,
    .event-row-survey {
      order: 2;
    }
    
    .event-row-action {
      order: 3;
    }
  }
  
  @media (max-width: 600px) {
    .events-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Tab switching
  document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', () => {
      const targetTab = tab.dataset.tab;
      
      // Update active tab
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('tab--active'));
      tab.classList.add('tab--active');
      
      // Update content
      document.querySelectorAll('.tab-content').forEach(content => {
        content.classList.remove('tab-content--active');
      });
      document.getElementById('tab-' + targetTab).classList.add('tab-content--active');
      
      // Update URL without reload
      const url = new URL(window.location);
      url.searchParams.set('tab', targetTab);
      history.pushState({}, '', url);
    });
  });
</script>
