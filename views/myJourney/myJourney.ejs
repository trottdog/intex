<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/_head') %>
  <style>
    /* My Journey specific styles */
    .myjourney-shell {
      display: grid;
      grid-template-columns: 280px minmax(0, 1fr);
      min-height: calc(100vh - var(--header-height));
      padding-top: var(--header-height);
    }
    
    .myjourney-sidebar {
      background: var(--color-surface);
      border-right: 1px solid var(--color-border-subtle);
      padding: 2rem 1.5rem;
      position: sticky;
      top: var(--header-height);
      height: calc(100vh - var(--header-height));
      overflow-y: auto;
    }
    
    .myjourney-main {
      padding: 2rem;
      background: var(--color-bg);
      min-height: calc(100vh - var(--header-height));
    }
    
    .myjourney-main .container {
      max-width: 1100px;
    }
    
    /* Profile header in sidebar */
    .profile-mini {
      text-align: center;
      padding-bottom: 1.5rem;
      margin-bottom: 1.5rem;
      border-bottom: 1px solid var(--color-border-subtle);
    }
    
    .profile-mini-photo {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      margin: 0 auto 1rem;
      overflow: hidden;
      border: 3px solid var(--color-primary-soft);
      box-shadow: var(--shadow-soft);
      background: var(--color-primary-soft);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .profile-mini-photo img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .profile-mini-photo .initials {
      font-family: var(--font-heading);
      font-size: var(--text-xl);
      color: var(--color-primary-dark);
    }
    
    .profile-mini-name {
      font-family: var(--font-heading);
      font-size: var(--text-lg);
      margin-bottom: 0.25rem;
    }
    
    .profile-mini-email {
      font-size: var(--text-xs);
      color: var(--color-text-muted);
    }
    
    /* Sidebar navigation */
    .sidebar-section {
      margin-bottom: 1.5rem;
    }
    
    .sidebar-section-title {
      font-size: var(--text-xs);
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--color-text-muted);
      margin-bottom: 0.75rem;
      padding: 0 0.75rem;
    }
    
    .sidebar-nav {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    
    .sidebar-nav-item + .sidebar-nav-item {
      margin-top: 0.25rem;
    }
    
    .sidebar-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem;
      border-radius: var(--radius-md);
      font-size: var(--text-sm);
      font-weight: 500;
      color: var(--color-text-muted);
      transition: all var(--transition-fast);
      text-decoration: none;
    }
    
    .sidebar-link:hover {
      background: var(--color-primary-soft);
      color: var(--color-text);
    }
    
    .sidebar-link--active {
      background: var(--color-primary-soft);
      color: var(--color-primary-dark);
      font-weight: 600;
    }
    
    .sidebar-link svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
    }
    
    .sidebar-link .badge {
      margin-left: auto;
      font-size: 0.65rem;
      padding: 0.15rem 0.5rem;
    }
    
    /* Quick actions in sidebar */
    .sidebar-actions {
      margin-top: auto;
      padding-top: 1.5rem;
      border-top: 1px solid var(--color-border-subtle);
    }
    
    /* Page header */
    .page-header {
      margin-bottom: 2rem;
    }
    
    .page-header h1 {
      margin-bottom: 0.5rem;
    }
    
    .page-header-subtitle {
      color: var(--color-text-muted);
      font-size: var(--text-lg);
    }
    
    /* Responsive */
    @media (max-width: 900px) {
      .myjourney-shell {
        grid-template-columns: 1fr;
      }
      
      .myjourney-sidebar {
        position: static;
        height: auto;
        border-right: none;
        border-bottom: 1px solid var(--color-border-subtle);
        padding: 1rem;
      }
      
      .profile-mini {
        display: flex;
        align-items: center;
        text-align: left;
        gap: 1rem;
        padding-bottom: 1rem;
        margin-bottom: 1rem;
      }
      
      .profile-mini-photo {
        width: 50px;
        height: 50px;
        margin: 0;
      }
      
      .sidebar-nav {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }
      
      .sidebar-nav-item + .sidebar-nav-item {
        margin-top: 0;
      }
      
      .sidebar-link {
        padding: 0.5rem 0.75rem;
        white-space: nowrap;
      }
      
      .sidebar-section-title {
        display: none;
      }
      
      .sidebar-actions {
        display: none;
      }
    }
  </style>
</head>
<body>
  <!-- Skip to main content for accessibility -->
  <a href="#main-content" class="sr-only">Skip to main content</a>
  
  <!-- Site Header -->
  <header class="site-header">
    <div class="container site-header-inner">
      <%- include('../partials/_header') %>
    </div>
  </header>
  
  <!-- Flash Messages -->
  <% if (typeof messages !== 'undefined') { %>
    <%- include('../partials/_flash', { messages }) %>
  <% } %>
  
  <!-- My Journey Shell -->
  <div class="myjourney-shell">
    <!-- Sidebar -->
    <aside class="myjourney-sidebar">
      <%- include('../partials/_sidebarMyJourney') %>
    </aside>
    
    <!-- Main Content -->
    <main id="main-content" class="myjourney-main">
      <div class="container">
        <%- body %>
      </div>
    </main>
  </div>
  
  <!-- Site Footer (minimal for app pages) -->
  <footer class="site-footer" style="padding: 1.5rem 0;">
    <div class="container">
      <div class="footer-bottom" style="border-top: none; padding-top: 0;">
        <p>&copy; <%= new Date().getFullYear() %> Ella Rises. All rights reserved.</p>
        <p>
          <a href="/about" style="color: rgba(255,255,255,0.6);">About</a> · 
          <a href="/programs" style="color: rgba(255,255,255,0.6);">Programs</a> · 
          <a href="mailto:nadia@ellarises.org" style="color: rgba(255,255,255,0.6);">Contact</a>
        </p>
      </div>
    </div>
  </footer>
  
  <!-- JavaScript -->
  <script src="/js/main.js"></script>
  <script src="/js/myJourney.js"></script>
</body>
</html>
