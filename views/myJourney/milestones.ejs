<script>
  // Modal functions
  function openAddMilestoneModal() {
    document.getElementById('addMilestoneModal').classList.add('open');
    document.body.style.overflow = 'hidden';
  }
  
  function closeAddMilestoneModal() {
    document.getElementById('addMilestoneModal').classList.remove('open');
    document.body.style.overflow = '';
  }
  
  function openProgressModal(milestoneId) {
    document.getElementById('progress_milestone_id').value = milestoneId;
    document.getElementById('progressForm').action = '/my-journey/milestones/' + milestoneId + '/progress';
    document.getElementById('progressModal').classList.add('open');
    document.body.style.overflow = 'hidden';
  }
  
  function closeProgressModal() {
    document.getElementById('progressModal').classList.remove('open');
    document.body.style.overflow = '';
  }
  
  // Start progress on a planned milestone
  function startProgress(milestoneId) {
    if (confirm('Start working on this milestone?')) {
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/my-journey/milestones/' + milestoneId + '/start';
      
      const csrf = document.createElement('input');
      csrf.type = 'hidden';
      csrf.name = '_csrf';
      csrf.value = '<%= csrfToken %>';
      form.appendChild(csrf);
      
      document.body.appendChild(form);
      form.submit();
    }
  }
  
  // Mark milestone as achieved
  function markAchieved(milestoneId) {
    if (confirm('Mark this milestone as achieved? ðŸŽ‰')) {
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/my-journey/milestones/' + milestoneId + '/achieve';
      
      const csrf = document.createElement('input');
      csrf.type = 'hidden';
      csrf.name = '_csrf';
      csrf.value = '<%= csrfToken %>';
      form.appendChild(csrf);
      
      document.body.appendChild(form);
      form.submit();
    }
  }
  
  // Custom milestone toggle
  document.getElementById('milestone_template_id').addEventListener('change', function() {
    const customGroup = document.getElementById('customTitleGroup');
    const customInput = document.getElementById('custom_title');
    
    if (this.value === 'custom') {
      customGroup.style.display = 'block';
      customInput.required = true;
    } else {
      customGroup.style.display = 'none';
      customInput.required = false;
    }
  });
  
  // Close modals on escape
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeAddMilestoneModal();
      closeProgressModal();
    }
  });
</script>
