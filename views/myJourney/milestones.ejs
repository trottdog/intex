<!-- views/myJourney/milestones.ejs -->

<div class="page-header">
  <div class="page-header-content">
    <h1>My Milestones</h1>
    <p class="page-header-subtitle">Track your goals, celebrate achievements, and see how far you've come</p>
  </div>
  <button class="btn btn-primary" onclick="openAddMilestoneModal()">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10"></circle>
      <line x1="12" y1="8" x2="12" y2="16"></line>
      <line x1="8" y1="12" x2="16" y2="12"></line>
    </svg>
    Add Milestone
  </button>
</div>

<!-- Progress Summary -->
<div class="milestone-summary">
  <div class="milestone-summary-progress">
    <div class="progress-ring">
      <%
        const total = milestonesPlanned.length + milestonesInProgress.length + milestonesAchieved.length;
        const achievedPercent = total > 0 ? Math.round((milestonesAchieved.length / total) * 100) : 0;
      %>
      <svg viewBox="0 0 120 120">
        <circle class="progress-ring-bg" cx="60" cy="60" r="50" />
        <circle class="progress-ring-fill" cx="60" cy="60" r="50" 
          stroke-dasharray="314.159"
          stroke-dashoffset="<%= 314.159 - (achievedPercent / 100) * 314.159 %>" />
      </svg>
      <div class="progress-ring-text">
        <span class="progress-ring-value"><%= achievedPercent %>%</span>
        <span class="progress-ring-label">Complete</span>
      </div>
    </div>
  </div>
  
  <div class="milestone-summary-stats">
    <div class="summary-stat">
      <div class="summary-stat-icon summary-stat-icon--planned">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
      </div>
      <div class="summary-stat-content">
        <span class="summary-stat-value"><%= milestonesPlanned.length %></span>
        <span class="summary-stat-label">Planned</span>
      </div>
    </div>
    
    <div class="summary-stat">
      <div class="summary-stat-icon summary-stat-icon--progress">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="2" x2="12" y2="6"></line>
          <line x1="12" y1="18" x2="12" y2="22"></line>
          <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
          <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
          <line x1="2" y1="12" x2="6" y2="12"></line>
          <line x1="18" y1="12" x2="22" y2="12"></line>
          <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
          <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
        </svg>
      </div>
      <div class="summary-stat-content">
        <span class="summary-stat-value"><%= milestonesInProgress.length %></span>
        <span class="summary-stat-label">In Progress</span>
      </div>
    </div>
    
    <div class="summary-stat">
      <div class="summary-stat-icon summary-stat-icon--achieved">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="8" r="7"></circle>
          <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
        </svg>
      </div>
      <div class="summary-stat-content">
        <span class="summary-stat-value"><%= milestonesAchieved.length %></span>
        <span class="summary-stat-label">Achieved</span>
      </div>
    </div>
  </div>
</div>

<!-- Milestones Sections -->
<div class="milestones-container">
  <!-- In Progress Section -->
  <section class="milestone-section">
    <div class="section-header">
      <h2>
        <span class="section-icon section-icon--progress">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="2" x2="12" y2="6"></line>
            <line x1="12" y1="18" x2="12" y2="22"></line>
            <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
            <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
            <line x1="2" y1="12" x2="6" y2="12"></line>
            <line x1="18" y1="12" x2="22" y2="12"></line>
          </svg>
        </span>
        In Progress
      </h2>
      <span class="section-count"><%= milestonesInProgress.length %></span>
    </div>
    
    <% if (milestonesInProgress.length > 0) { %>
      <div class="milestone-cards">
        <% milestonesInProgress.forEach(milestone => { %>
          <article class="milestone-card milestone-card--progress">
            <div class="milestone-card-header">
              <div class="milestone-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              </div>
              <div class="milestone-card-actions">
                <button class="btn-icon" onclick="openProgressModal(<%= milestone.participant_milestone_id %>)" title="Add progress note">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                  </svg>
                </button>
                <button class="btn-icon btn-icon--success" onclick="markAchieved(<%= milestone.participant_milestone_id %>)" title="Mark as achieved">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </button>
              </div>
            </div>
            
            <h3 class="milestone-title"><%= milestone.milestone_title %></h3>
            <p class="milestone-category"><%= milestone.milestone_category || 'General' %></p>
            
            <% if (milestone.milestone_description) { %>
              <p class="milestone-desc"><%= milestone.milestone_description %></p>
            <% } %>
            
            <% if (milestone.target_date) { %>
              <div class="milestone-target">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Target: <%= milestone.target_date_formatted %>
              </div>
            <% } %>
            
            <% if (milestone.notes) { %>
              <div class="milestone-notes">
                <strong>Latest note:</strong> <%= milestone.notes %>
              </div>
            <% } %>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state-inline">
        <p>No milestones in progress. Move a planned milestone here when you start working on it!</p>
      </div>
    <% } %>
  </section>
  
  <!-- Planned Section -->
  <section class="milestone-section">
    <div class="section-header">
      <h2>
        <span class="section-icon section-icon--planned">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </span>
        Planned
      </h2>
      <span class="section-count"><%= milestonesPlanned.length %></span>
    </div>
    
    <% if (milestonesPlanned.length > 0) { %>
      <div class="milestone-cards">
        <% milestonesPlanned.forEach(milestone => { %>
          <article class="milestone-card milestone-card--planned">
            <div class="milestone-card-header">
              <div class="milestone-icon milestone-icon--muted">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              </div>
              <div class="milestone-card-actions">
                <button class="btn-icon btn-icon--primary" onclick="startProgress(<%= milestone.participant_milestone_id %>)" title="Start working on this">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="5 3 19 12 5 21 5 3"></polygon>
                  </svg>
                </button>
              </div>
            </div>
            
            <h3 class="milestone-title"><%= milestone.milestone_title %></h3>
            <p class="milestone-category"><%= milestone.milestone_category || 'General' %></p>
            
            <% if (milestone.milestone_description) { %>
              <p class="milestone-desc"><%= milestone.milestone_description %></p>
            <% } %>
            
            <% if (milestone.target_date) { %>
              <div class="milestone-target">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Target: <%= milestone.target_date_formatted %>
              </div>
            <% } %>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state-inline">
        <p>No planned milestones. Add one to start tracking your goals!</p>
        <button class="btn btn-outline btn-sm" onclick="openAddMilestoneModal()">Add Milestone</button>
      </div>
    <% } %>
  </section>
  
  <!-- Achieved Section (Trophy Case) -->
  <section class="milestone-section milestone-section--achieved">
    <div class="section-header">
      <h2>
        <span class="section-icon section-icon--achieved">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="8" r="7"></circle>
            <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
          </svg>
        </span>
        Trophy Case
      </h2>
      <span class="section-count section-count--gold"><%= milestonesAchieved.length %></span>
    </div>
    
    <% if (milestonesAchieved.length > 0) { %>
      <div class="trophy-grid">
        <% milestonesAchieved.forEach(milestone => { %>
          <article class="trophy-card">
            <div class="trophy-icon">
              <svg viewBox="0 0 24 24" fill="var(--color-coral)" stroke="var(--color-coral)" stroke-width="1.5">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            </div>
            <h4 class="trophy-title"><%= milestone.milestone_title %></h4>
            <p class="trophy-date">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <%= milestone.achieved_date_formatted || 'Achieved' %>
            </p>
            <% if (milestone.notes) { %>
              <p class="trophy-reflection"><%= milestone.notes %></p>
            <% } %>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state-trophy">
        <div class="trophy-placeholder">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <circle cx="12" cy="8" r="7"></circle>
            <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
          </svg>
        </div>
        <p>Your trophy case is waiting! Complete milestones to add achievements here.</p>
      </div>
    <% } %>
  </section>
</div>

<!-- Add Milestone Modal -->
<div id="addMilestoneModal" class="modal">
  <div class="modal-overlay" onclick="closeAddMilestoneModal()"></div>
  <div class="modal-content">
    <div class="modal-header">
      <h3>Add New Milestone</h3>
      <button class="modal-close" onclick="closeAddMilestoneModal()">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <form action="/my-journey/milestones" method="POST" class="modal-body">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      
      <div class="form-group">
        <label for="milestone_template_id">Milestone Type</label>
        <select name="milestone_template_id" id="milestone_template_id" required>
          <option value="">Select a milestone...</option>
          <% availableTemplates.forEach(template => { %>
            <option value="<%= template.milestone_template_id %>"><%= template.title %> (<%= template.category %>)</option>
          <% }) %>
          <option value="custom">Custom Milestone</option>
        </select>
      </div>
      
      <div class="form-group" id="customTitleGroup" style="display: none;">
        <label for="custom_title">Custom Title</label>
        <input type="text" name="custom_title" id="custom_title" placeholder="Enter your milestone title" />
      </div>
      
      <div class="form-group">
        <label for="target_date">Target Date (optional)</label>
        <input type="date" name="target_date" id="target_date" />
      </div>
      
      <div class="form-group">
        <label for="notes">Notes (optional)</label>
        <textarea name="notes" id="notes" rows="3" placeholder="What are you hoping to achieve? How will you work toward this?"></textarea>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-ghost" onclick="closeAddMilestoneModal()">Cancel</button>
        <button type="submit" class="btn btn-primary">Add Milestone</button>
      </div>
    </form>
  </div>
</div>

<!-- Progress Note Modal -->
<div id="progressModal" class="modal">
  <div class="modal-overlay" onclick="closeProgressModal()"></div>
  <div class="modal-content">
    <div class="modal-header">
      <h3>Add Progress Note</h3>
      <button class="modal-close" onclick="closeProgressModal()">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <form id="progressForm" method="POST" class="modal-body">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <input type="hidden" name="milestone_id" id="progress_milestone_id" />
      
      <div class="form-group">
        <label for="progress_notes">What progress have you made?</label>
        <textarea name="notes" id="progress_notes" rows="4" placeholder="Describe your progress, challenges, or insights..." required></textarea>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-ghost" onclick="closeProgressModal()">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Note</button>
      </div>
    </form>
  </div>
</div>

