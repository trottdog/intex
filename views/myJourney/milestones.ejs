    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }
  
  .milestone-notes {
    background: var(--color-surface);
    padding: 0.75rem;
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: 0.75rem;
  }
  
  .milestone-notes strong {
    color: var(--color-text);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Trophy Grid */
  .trophy-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1rem;
  }
  
  .trophy-card {
    background: linear-gradient(135deg, rgba(244, 176, 146, 0.1) 0%, rgba(249, 175, 177, 0.1) 100%);
    border-radius: var(--radius-md);
    padding: 1.25rem;
    text-align: center;
    border: 1px solid rgba(244, 176, 146, 0.2);
    transition: all var(--transition-fast);
  }
  
  .trophy-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-soft);
  }
  
  .trophy-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 0.75rem;
  }
  
  .trophy-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .trophy-title {
    font-size: var(--text-sm);
    margin: 0 0 0.35rem;
  }
  
  .trophy-date {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin: 0;
  }
  
  .trophy-reflection {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin: 0.5rem 0 0;
    font-style: italic;
  }
  
  /* Empty States */
  .empty-state-inline {
    padding: 1.5rem;
    text-align: center;
    background: var(--color-bg);
    border-radius: var(--radius-md);
  }
  
  .empty-state-inline p {
    color: var(--color-text-muted);
    margin: 0 0 1rem;
  }
  
  .empty-state-trophy {
    padding: 3rem;
    text-align: center;
  }
  
  .trophy-placeholder {
    width: 80px;
    height: 80px;
    margin: 0 auto 1rem;
    color: var(--color-border-subtle);
  }
  
  .trophy-placeholder svg {
    width: 100%;
    height: 100%;
  }
  
  .empty-state-trophy p {
    color: var(--color-text-muted);
    margin: 0;
  }
  
  /* Modal */
  .modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    visibility: hidden;
    opacity: 0;
    transition: all var(--transition-base);
  }
  
  .modal.open {
    visibility: visible;
    opacity: 1;
  }
  
  .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(58, 63, 59, 0.5);
    backdrop-filter: blur(4px);
  }
  
  .modal-content {
    position: relative;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    width: 100%;
    max-width: 480px;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-large);
    transform: translateY(20px);
    transition: transform var(--transition-base);
  }
  
  .modal.open .modal-content {
    transform: translateY(0);
  }
  
  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--color-border-subtle);
  }
  
  .modal-header h3 {
    margin: 0;
    font-size: var(--text-lg);
  }
  
  .modal-close {
    width: 32px;
    height: 32px;
    border: none;
    background: transparent;
    cursor: pointer;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }
  
  .modal-close:hover {
    background: var(--color-bg);
    color: var(--color-text);
  }
  
  .modal-body {
    padding: 1.5rem;
  }
  
  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border-subtle);
    margin-top: 1rem;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
    }
    
    .milestone-summary {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }
    
    .milestone-summary-stats {
      flex-direction: column;
      gap: 1rem;
    }
    
    .summary-stat {
      justify-content: center;
    }
    
    .trophy-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

