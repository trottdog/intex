<!-- views/myJourney/event-detail-user.ejs -->

<section class="section">
  <div class="shell">
    <aside class="sidebar">
      <%- include("../partials/_sidebarMyJourney") %>
    </aside>

    <section>
      <header class="mb-3">
        <p class="badge badge--accent mb-1">
          <%= registration.event_type || 'Event' %>
        </p>
        <h1 class="mt-0"><%= registration.event_name %></h1>
        <p class="text-muted">
          <%= registration.event_date_start_formatted %>
          <% if (registration.event_time_start_formatted) { %>
            路 <%= registration.event_time_start_formatted %>
          <% } %>
          路 <%= registration.event_location %>
        </p>
      </header>

      <div class="grid" style="grid-template-columns: minmax(0, 1.6fr) minmax(0, 1.1fr); gap: 2rem;">
        <!-- Left: event and registration info -->
        <div class="stack">
          <section>
            <div class="card">
              <h2 class="mt-0">About this event</h2>
              <p class="text-muted">
                <%= registration.event_description || 'Details for this event will be provided by Ella Rises.' %>
              </p>
            </div>
          </section>

          <section>
            <div class="card">
              <h2 class="mt-0">Your registration</h2>
              <div class="grid" style="grid-template-columns: repeat(2, minmax(0, 1fr)); gap: 1.5rem;">
                <div>
                  <p class="text-muted" style="font-size: var(--text-xs); text-transform: uppercase; letter-spacing: 0.08em;">
                    Status
                  </p>
                  <p style="margin: 0;">
                    <span class="badge badge--primary">
                      <%= registration.registration_status || 'Registered' %>
                    </span>
                  </p>
                </div>
                <div>
                  <p class="text-muted" style="font-size: var(--text-xs); text-transform: uppercase; letter-spacing: 0.08em;">
                    Check in
                  </p>
                  <p class="text-muted" style="margin: 0;">
                    <% if (registration.registration_check_in_date_formatted) { %>
                      <%= registration.registration_check_in_date_formatted %>
                      <% if (registration.registration_check_in_time_formatted) { %>
                        路 <%= registration.registration_check_in_time_formatted %>
                      <% } %>
                    <% } else { %>
                      Not checked in yet
                    <% } %>
                  </p>
                </div>
              </div>

              <p class="text-muted mt-3" style="font-size: 0.9rem;">
                If your plans change or you need to update your registration,
                please contact Ella Rises.
              </p>
            </div>
          </section>
        </div>

        <!-- Right: survey + carpool -->
        <div class="stack">
          <!-- Survey card -->
          <section>
            <div class="card">
              <h2 class="mt-0">Event survey</h2>

              <% if (registration.survey_status === 'completed') { %>
                <div class="alert alert-success">
                  Thank you. You completed this survey.
                </div>
                <% if (registration.survey_overall_score) { %>
                  <p class="text-muted">
                    Overall score:
                    <strong><%= registration.survey_overall_score %></strong>
                  </p>
                <% } %>
              <% } else if (registration.can_complete_survey) { %>
                <div class="alert alert-info">
                  We would love to hear how this event went for you.
                </div>
                <a href="/my-journey/surveys/<%= registration.registration_id %>" class="btn btn-primary">
                  Complete survey
                </a>
              <% } else { %>
                <p class="text-muted">
                  Your survey will appear here once the event has taken place.
                </p>
              <% } %>
            </div>
          </section>

          <!-- Carpool card (optional) -->
          <section>
            <div class="card">
              <h2 class="mt-0">Carpool</h2>

              <% if (!carpoolAssignments || carpoolAssignments.length === 0) { %>
                <p class="text-muted mb-0">
                  Carpool information is not available for this event yet.
                </p>
              <% } else { %>
                <p class="text-muted">
                  Here is your current carpool plan for this event.
                </p>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Group</th>
                      <th>Role</th>
                      <th>Pickup</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% carpoolAssignments.forEach(ca => { %>
                      <tr>
                        <td><%= ca.carpool_group_name || 'Carpool group' %></td>
                        <td>
                          <% if (ca.is_driver) { %>
                            <span class="badge badge--accent">Driver</span>
                          <% } else { %>
                            <span class="badge badge--neutral">Rider</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (ca.pickup_location) { %>
                            <%= ca.pickup_location %>
                            <% if (ca.pickup_time_formatted) { %>
                              路 <%= ca.pickup_time_formatted %>
                            <% } %>
                          <% } else { %>
                            TBD
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              <% } %>
            </div>
          </section>
        </div>
      </div>
    </section>
  </div>
</section>
