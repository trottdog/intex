<!-- views/public/home.ejs -->

<!-- Hero Section -->
<section class="hero">
  <div class="container flex-between" style="align-items: center; gap: 3rem; flex-wrap: wrap; position: relative;">
    <!-- Decorative flower -->
    <div class="flower-decor flower-1" style="top: 22%; right: 5%;">
      <img src="/images/flowers/flower1.avif" alt="" aria-hidden="true" />
    </div>
    
    <div class="hero-content animate-fade-in-up">
      <span class="hero-kicker">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
        </svg>
        Empowering The Youth
      </span>
      
      <h1 class="hero-title">
        Helping girls <span>rise</span> with art, STEM & culture
      </h1>
      
      <p class="hero-subtitle">
        Ella Rises walks with Latina girls as they grow in confidence, embrace their heritage, 
        and prepare for college and meaningful careers through mariachi, ballet folklorico, 
        STEAM workshops, and mentoring.
      </p>
      
      <div class="hero-actions">
        <a href="/donate" class="btn btn-primary btn-lg">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          </svg>
          Donate Now
        </a>
        <a href="/programs" class="btn btn-outline btn-lg">
          Explore Programs
        </a>
      </div>
      
      <div class="hero-stats">
        <div class="hero-stat">
          <div class="hero-stat-value">150+</div>
          <div class="hero-stat-label">Young women served annually</div>
        </div>
        <div class="hero-stat">
          <div class="hero-stat-value">4</div>
          <div class="hero-stat-label">Signature programs</div>
        </div>
        <div class="hero-stat">
          <div class="hero-stat-value">100%</div>
          <div class="hero-stat-label">Culturally rooted</div>
        </div>
      </div>
    </div>

<!-- Circular logo to the right of the hero content -->
    <div class="hero-logo-circle" style="
      width: 400px;
      height: 400px;
      border-radius: 50%;
      overflow: hidden;
      box-shadow: var(--shadow-large);
      background: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
    ">
      <img 
        src="/images/logo.png" 
        alt="Ella Rises logo" 
        style="width: 100%; height: 100%; object-fit: contain;" 
      />
    </div>
  </div>
</section>

<!-- Circle Photo Strip -->
<section class="section--tight">
  <div class="container">
    <div class="circle-strip stagger-children">
      <div class="circle-photo" style="width: 210px; height: 210px;">
        <img src="/images/general/summit1.jpg" alt="Ella Rises summit participants" />
      </div>
      <div class="circle-photo" style="width: 210px; height: 210px;">
        <img src="/images/steam/gen1.jpeg" alt="STEAM workshop activity" />
      </div>
      <div class="circle-photo circle-photo--logo" style="width: 250px; height: 250px;">
        <img src="/images/logo.png" alt="Ella Rises logo" />
      </div>
      <div class="circle-photo" style="width: 210px; height: 210px;">
        <img src="/images/steam/gen2.jpg" alt="Girls learning together" />
      </div>
      <div class="circle-photo" style="width: 210px; height: 210px;">
        <img src="/images/ballet_folklorico/dancegirls.jpeg" alt="Ballet folklorico dancers" />
      </div>
    </div>
  </div>
</section>

<!-- Programs Section -->
<section class="programs-section">
  <div class="container">
    <div class="programs-header">
      <h2 class="heading-decorated">Our Programs</h2>
      <p class="text-muted mt-3">
        Through art, music, and STEAM, we create experiences that celebrate heritage 
        while preparing young women for higher education and leadership.
      </p>
    </div>
    
    <div class="programs-grid stagger-children">
      <!-- Ballet Folklorico -->
      <article class="program-card">
        <div class="program-card-bg">
          <img src="/images/ballet_folklorico/BalletGirls.jpg" alt="Ballet Folklorico dancers" />
        </div>
        <div class="program-card-overlay"></div>
        <div class="program-card-content">
          <h3 class="program-card-title">Ballet Folklorico</h3>
          <div class="program-card-expanded">
            <p class="program-card-desc">
              Our art program fosters joy, confidence, and creative self-expression 
              rooted in culture through Latin American Folk dance. Girls ages 11-18, Mondays at 7pm.
            </p>
            <div class="program-card-actions">
              <a href="/signup" class="btn btn-primary btn-sm">Enroll</a>
              <a href="/donate" class="btn btn-outline btn-sm">Donate</a>
            </div>
          </div>
        </div>
      </article>
      
      <!-- Mariachi -->
      <article class="program-card">
        <div class="program-card-bg">
          <img src="/images/mariachi/mariachiGirl.jpg" alt="Mariachi student" />
        </div>
        <div class="program-card-overlay"></div>
        <div class="program-card-content">
          <h3 class="program-card-title">Mariachi</h3>
          <div class="program-card-expanded">
            <p class="program-card-desc">
              A female mariachi band! Learn violin, trumpet, guitarrón, vihuela, and guitar. 
              All levels welcome. Mondays 5:30-6:45pm. $45 annual fee.
            </p>
            <div class="program-card-actions">
              <a href="/signup" class="btn btn-primary btn-sm">Enroll</a>
              <a href="/donate" class="btn btn-outline btn-sm">Donate</a>
            </div>
          </div>
        </div>
      </article>
      
      <!-- Summit + Educational Pathways -->
      <article class="program-card">
        <div class="program-card-bg">
          <img src="/images/general/edu1.jpg" alt="Summit and Educational Pathways" />
        </div>
        <div class="program-card-overlay"></div>
        <div class="program-card-content">
          <h3 class="program-card-title">Summit + Pathways</h3>
          <div class="program-card-expanded">
            <p class="program-card-desc">
              A day camp packed with art, STEM, and education focus! 
              Conclude with a tour of a local university or technical college.
            </p>
            <div class="program-card-actions">
              <a href="/signup" class="btn btn-primary btn-sm">Enroll</a>
              <a href="/donate" class="btn btn-outline btn-sm">Donate</a>
            </div>
          </div>
        </div>
      </article>
      
      <!-- STEAM -->
      <article class="program-card">
        <div class="program-card-bg">
          <img src="/images/steam/stem1.jpg" alt="STEAM workshop" />
        </div>
        <div class="program-card-overlay"></div>
        <div class="program-card-content">
          <h3 class="program-card-title">STEAM</h3>
          <div class="program-card-expanded">
            <p class="program-card-desc">
              Virtual and in-person workshops in science, technology, engineering, 
              art, and math. Partnered with Thanksgiving Point, UVU, and BYU.
            </p>
            <div class="program-card-actions">
              <a href="/signup" class="btn btn-primary btn-sm">Enroll</a>
              <a href="/donate" class="btn btn-outline btn-sm">Donate</a>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</section>

<!-- Impact Section -->
<section class="impact-section">
  <div class="container">
    <div class="impact-content">
      <h2 class="impact-title">Our Impact</h2>
      <p class="impact-subtitle">
        We're building a community where young Latinas can thrive, 
        break barriers, and become the leaders of tomorrow.
      </p>
      
      <div class="impact-stats">
        <div class="impact-stat">
          <div class="impact-stat-value">150+</div>
          <div class="impact-stat-label">Girls served each year</div>
        </div>
        <div class="impact-stat">
          <div class="impact-stat-value">90%</div>
          <div class="impact-stat-label">Report increased confidence</div>
        </div>
        <div class="impact-stat">
          <div class="impact-stat-value">85%</div>
          <div class="impact-stat-label">Plan to pursue higher education</div>
        </div>
      </div>
      
      <a href="/impact" class="btn btn-primary btn-lg mt-4">
        View Full Impact Report
      </a>
    </div>
  </div>
</section>

<!-- Upcoming Events Preview -->
<section class="section">
  <div class="container">
    <div class="flex-between mb-4">
      <div>
        <h2 class="heading-decorated">Upcoming Events</h2>
        <p class="text-muted mt-3">
          Join us for workshops, performances, and community gatherings.
        </p>
      </div>
      <a href="/events" class="btn btn-outline">
        View All Events
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
    
    <div class="grid grid-3 stagger-children">
      <% if (typeof events !== 'undefined' && events && events.length) { %>
        <% events.slice(0, 3).forEach(event => { %>
          <article class="card card--hoverable">
            <span class="badge badge--accent mb-2"><%= event.EventType || 'Event' %></span>
            <h3 style="font-size: var(--text-xl);"><%= event.EventName %></h3>
            <p class="text-muted" style="font-size: var(--text-sm);">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline; vertical-align: middle; margin-right: 4px;">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <%= event.EventDateStartFormatted %>
            </p>
            <p class="text-muted" style="font-size: var(--text-sm);">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline; vertical-align: middle; margin-right: 4px;">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <%= event.EventLocation %>
            </p>
            <p class="text-muted mt-2"><%= event.EventDescriptionShort %></p>
            <a href="/events/<%= event.EventDetailsID %>" class="btn btn-ghost mt-2" style="margin-left: -0.5rem;">
              Learn more →
            </a>
          </article>
        <% }) %>
      <% } else { %>
        <div class="card" style="grid-column: span 3;">
          <p class="text-muted text-center py-3">
            Upcoming events will be posted soon. Check back for workshops, summits, and performances!
          </p>
        </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Donate CTA Section -->
<section class="donate-section" style="position: relative;">
  <!-- Decorative flower -->
  <div class="flower-decor flower-2" style="bottom: 10%; left: 5%;">
    <img src="/images/flowers/flower2.avif" alt="" aria-hidden="true" />
  </div>
  
  <div class="container">
    <div class="donate-content">
      <h2 class="donate-title">Support Our Mission</h2>
      <p class="donate-text">
        Every donation helps a young Latina discover her potential, 
        connect with her heritage, and take steps toward higher education. 
        ¡Muchas gracias!
      </p>
      <div class="flex-center" style="gap: 1rem;">
        <a href="/donate" class="btn btn-primary btn-lg">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          </svg>
          Donate Now
        </a>
        <a href="/get-involved" class="btn btn-outline btn-lg">
          Other Ways to Help
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Testimonial/Quote Section -->
<section class="section" style="background: var(--color-primary-soft); padding: 4rem 0;">
  <div class="container">
    <div class="text-center" style="max-width: 700px; margin: 0 auto;">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="var(--color-primary-dark)" style="opacity: 0.3; margin-bottom: 1rem;">
        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
      </svg>
      <p style="font-family: var(--font-heading); font-size: var(--text-2xl); color: var(--color-text); line-height: 1.5; margin-bottom: 1.5rem;">
        "I've been able to inspire myself. Even though there's all these things in life 
        that just stop you, you can still do it and you can work a way around it."
      </p>
      <p style="font-weight: 600; color: var(--color-primary-dark);">
        — Indrid Jaime, Ella Rises Participant
      </p>
    </div>
  </div>
</section>

<script>
  // Add scroll effect to header
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.querySelector('.site-header');
    
    window.addEventListener('scroll', function() {
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  });
</script>
